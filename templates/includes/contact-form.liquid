<div class="container">
  <p class="txt-white">Contact Us</p>

  <!--Begin Contact Form-->
  <div class="container-fluid slate-gray">

		<!--NAME && LAST NAME-->
    <div class="row">
      <div class="col-md-6">
        <form method="post">
          <div class="form-group ">
            <div class="row">
              <div class="col-md-3">
                <label class="control-label requiredField" for="name">
                  First Name
                </label>
              </div>
              <div class="col-md-9">
                <input class="form-control" id="name" name="name" type="text"/>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-6">
      	<form method="post">
	        <div class="form-group ">
	          <div class="row">
	            <div class="col-md-3">
	              <label class="control-label requiredField" for="lastname">
	                Last Name
	              </label>
	            </div>
	            <div class="col-md-9">
	              <input class="form-control" id="lastname" name="lastname" type="text"/>
	            </div>
	          </div>
	        </div>
	      </form>
      </div>
    </div>

		<!--PHONE && EMAIL-->
    <div class="row">
      <div class="col-md-6">
        <form method="post">
          <div class="form-group ">
            <div class="row">
              <div class="col-md-3">
                <label class="control-label requiredField" for="phone">
                  Phone
                </label>
              </div>
              <div class="col-md-9">
                <input class="form-control" id="phone" name="phone" type="text"/>
              </div>                
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-6">
      	<form method="post">
	        <div class="form-group">
	          <div class="row">
	            <div class="col-md-3">
	              <label class="control-label requiredField" for="email">
			            Email
			          </label>
	            </div>
	            <div class="col-md-9">
	              <input class="form-control" id="email" name="email" type="text"/>
	            </div>
	          </div>
	        </div>
	      </form>
      </div>
    </div>

    <!--COMPANY && SUBMIT BUTTON-->
    <div class="row">
      <div class="col-md-6">
        <form method="post">
          <div class="form-group ">
            <div class="row">
              <div class="col-md-3">
                <label class="control-label requiredField" for="company">
                  Company
                </label>
              </div>
              <div class="col-md-9">
                <input class="form-control" id="company" name="company" type="text"/>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-6">
      	<form method="post">
	        <div class="form-group ">
	        	<div class="row">
	        	  <div class="col-md-3">
	        	  </div>
	        	  <div class="col-md-9">
	        	    <button class="btn submit-btn " name="submit" type="submit">
    							Submit
    						</button>
	        	  </div>
	        	</div>
	        </div>
	      </form>
      </div>
    </div>

    <!--MESSAGE BOX-->
    <div class="row">
      <div class="col-md-12">
        <form method="post">
          <div class="form-group">
            <div class="row">
              <div class="col-md-2">
                <label class="control-label requiredField" for="company">
                  Message
                </label>
              </div>
              <div class="col-md-10">
              	<textarea class="form-control" name="message" id="message" cols="5" rows="5"></textarea>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
